{
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "8.5.2" },
    { "type": "panel", "id": "piechart", "name": "Pie chart", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "heatmap", "name": "Heatmap", "version": "" }, 
    { "type": "panel", "id": "graph", "name": "Graph", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Active Prediction Requests",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum({__name__=~'.*_active_prediction_requests'})",
          "legendFormat": "Active Requests",
          "refId": "A"
        }
      ],
      "id": 1,
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
    },
    {
      "title": "Prediction Count by Type",
      "type": "piechart",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (prediction) (increase({__name__=~'.*_prediction_count_by_type_total'}[$__range]))",
          "legendFormat": "{{`{{prediction}}`}}",
          "refId": "A"
        }
      ],
      "id": 2,
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
    },
    {
      "title": "Application Info",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "{__name__=~'.*_app_info'}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "title": "Requests to /predict Endpoint",
      "type": "graph",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate({__name__=~'.*_http_requests_total', path=\"/predict\"}[$__interval]))",
          "legendFormat": "Requests to /predict",
          "refId": "A"
        }
      ],
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "title": "Prediction Length Distribution by Sentiment",
      "type": "heatmap",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate({__name__=~'.*_input_length_vs_prediction_bucket', prediction='positive'}[$__interval])) by (le)",
          "legendFormat": "Positive ({{le}})",
          "refId": "A"
        },
        {
          "expr": "sum(rate({__name__=~'.*_input_length_vs_prediction_bucket', prediction='negative'}[$__interval])) by (le)",
          "legendFormat": "Negative ({{le}})",
          "refId": "B"
        }
      ],
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": [
    "remla-app"
  ],
  "templating": {
    "list": [
      {
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "definition": "label_values({__name__=~'.*_prediction_count_by_type_total'}, prediction)",
        "hide": 0,
        "includeAll": true,
        "label": "Prediction",
        "multi": true,
        "name": "prediction",
        "options": [],
        "query": "label_values({__name__=~'.*_prediction_count_by_type_total'}, prediction)",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 0,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "REMLA Application Dashboard",
  "uid": "remla-app-service-dashboard",
  "version": 1
}